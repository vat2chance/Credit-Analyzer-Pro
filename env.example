# Application Configuration
NODE_ENV=development
PORT=3001
APP_NAME=Credit Analyzer Pro
APP_VERSION=1.0.0

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/credit_analyzer_pro"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=credit_analyzer_pro
DATABASE_USER=username
DATABASE_PASSWORD=password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@creditanalyzerpro.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Credit Bureau API Keys
EQUIFAX_API_KEY=your-equifax-api-key
EQUIFAX_API_SECRET=your-equifax-api-secret
EXPERIAN_API_KEY=your-experian-api-key
EXPERIAN_API_SECRET=your-experian-api-secret
TRANSUNION_API_KEY=your-transunion-api-key
TRANSUNION_API_SECRET=your-transunion-api-secret

# Business Credit Provider API Keys
DUN_BRADSTREET_API_KEY=your-dnb-api-key
EQUIFAX_BUSINESS_API_KEY=your-equifax-business-api-key
EXPERIAN_BUSINESS_API_KEY=your-experian-business-api-key

# Banking Integration (Plaid)
PLAID_CLIENT_ID=your-plaid-client-id
PLAID_SECRET=your-plaid-secret
PLAID_ENV=sandbox

# Banking Integration (Yodlee)
YODLEE_CLIENT_ID=your-yodlee-client-id
YODLEE_CLIENT_SECRET=your-yodlee-client-secret
YODLEE_ENV=sandbox

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=credit-analyzer-pro-files

# CDN Configuration
CDN_URL=https://cdn.creditanalyzerpro.com
CDN_BUCKET=credit-analyzer-pro-cdn

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-key
COOKIE_SECRET=your-cookie-secret-key

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://creditanalyzerpro.com

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Monitoring and Analytics
SENTRY_DSN=your-sentry-dsn
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
ENABLE_TWO_FACTOR=true
ENABLE_BIOMETRIC_AUTH=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=true

# Development Configuration
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_DATABASE_LOGGING=false

# Testing Configuration
TEST_DATABASE_URL="postgresql://username:password@localhost:5432/credit_analyzer_pro_test"
NODE_ENV=test
